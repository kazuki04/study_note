<div class="wrapper">

  <div class="form_body">
    <div class="form_title">
      <h2 class="registration_title">Study Note</h2>
      <p>学習用のメモアプリです</p>
    </div>

    <div class="google_auth">
      <%= link_to 'Googleで登録する', user_google_oauth2_omniauth_authorize_path, method: :post %>
    </div>

    <hr>

    <div class="user_form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: @user %>

        <%= f.text_field :nickname, autofocus: true, placeholder: "ニックネーム" , autocomplete: "nickname", class: "field" %>
        <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", autocomplete: "email", class: "field"%>

        <% if @sns.present?%>
          <%= hidden_field_tag :sns_auth, true%>
        <% else %>
          <%= f.password_field :password, placeholder: "パスワード", autocomplete: "new-password", class: "field"%>
          <%= f.password_field :password_confirmation, placeholder: "パスワード(確認用)", autocomplete: "new-password", class: "field" %>
        <% end %>

        <div class="actions">
          <%= f.submit "登録" , id:"submit_btn" %>
        </div>
      <% end %>
    </div>

    <div class="login">
      <p>アカウントを既に持っていますか？</p>
      <%= link_to 'ログイン', new_user_session_path, class:"login_btn" %>
    </div>
  </div>

</div>
<div class="form_body">
  <div class="form_title">
    <h2>Study Note</h2>
    <p>学習用のメモアプリです</p>
  </div>

  <div class="user_form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.text_field :nickname, autofocus: true, placeholder: "ニックネーム" , autocomplete: "nickname" %>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.password_field :password, placeholder: "パスワード", autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, placeholder: "パスワード(確認用)", autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>

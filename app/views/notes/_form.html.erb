<div class="form_field">
  <%= form_with model:[@selected_month ,note_form], id:"note_form", local: true do |f| %>
    <div class="date">
        <%= "#{today_date.year}年#{today_date.month}月#{today_date.day}日" %>
    </div>

    <%= f.hidden_field :written_day, value: today_date %>
    <%= f.text_field :highlight, class:"note_field", placeholder: "highlight" %>
    <%= f.text_field :excerpt, class:"note_field", placeholder: "excerpt" %>
    
    <%if note_form.persisted? %>
      <%= f.text_field :tag_names, class:"note_field", placeholder: ",で区切り、タグを最大5つまで登録できます", autocomplete: "off", value:  note_form.tags%>
    <% else %>
      <%= f.text_field :tag_names, class:"note_field", placeholder: ",で区切り、タグを最大5つまで登録できます", autocomplete: "off" %>
    <% end %>
    <div id="search_tag_field">
      <div id="search_tag_list"></div>
    </div>
    <%= f.rich_text_area :body, class:"trix-content note_field_body" %>
    <div class="btn">
      <%= f.submit id:"note_submit_btn" %>
    </div>
  <% end %>
</div>